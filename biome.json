{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["node_modules", "dist", "*.json", "*.config.*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"useButtonType": "warn",
				"noLabelWithoutControl": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	}
}
